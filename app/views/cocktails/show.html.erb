<h1><%= @cocktail.name %></h1>

<h3>Ingredients:</h3>

<%= simple_form_for [@cocktail, @dose] do |f| %>

  <% if @dose.errors.any? %>
    <% @dose.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.association :ingredient, as: :select %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>

<% end %>

<%= link_to "Home", cocktails_path %>
