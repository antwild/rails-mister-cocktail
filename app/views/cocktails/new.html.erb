<div class="col-6 body cocktail-form">
  <div class="new-head">
    <h2>New cocktail</h2>
    <%= link_to "Home", root_path, class: "home-btn" %>
  </div>
  <%= simple_form_for(@cocktail) do |f| %>

    <% if @cocktail.errors.any? %>
      <% @cocktail.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    <% end %>

    <div class="form-group">

        <%= f.input :name, input_html: { class: 'form-control' } %>
      <!-- <div class="form-control"> -->
      <!-- </div> -->

      <div class="form-actions">
        <%= f.input :photo, input_html: { class: 'form-control-file' } %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>

      <div class="form-actions new-cocktail-button">
        <%= f.button :submit, class: "btn btn-info" %>
      </div>

    </div>
  <% end %>

</div>
